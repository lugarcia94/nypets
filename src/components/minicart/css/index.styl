@media (max-width: 1199px)
    .minicart--fixed
        width: 100%
        height: 100%
        overflow: hidden

    .minicart
        position: fixed
        z-index: 200
        top: 0
        left: 0
        width: 100%
        height: 100%

        background: rgba(0,0,0, .5)

        visibility: hidden
        opacity: 0

        transition: all .2s ease-in-out

        &.minicart--actived
            visibility: visible
            opacity: 1

    .minicart__container
        position: fixed
        top: 0
        right: 0
        width: 300px
        height: 100%

        background: #ffffff

        transform: translateX(100%)
        transition: all .2s ease-in-out

        .minicart--actived &
            transform: translateX(0)

    .minicart__header
        display: flex
        justify-content: space-between
        align-items: center
        margin 0 10px
        border-bottom 1px solid #f3f3f3

    .minicart__title
        color: #b53b96;
        flex: 1 1 auto;
        font-size: 14px;
        font-weight: 700;
        margin: 0;
        text-transform: uppercase;

    .minicart__close
        width: 45px
        height: 45px

        display: flex
        justify-content: center
        align-items: center

        color: #b53b96;
        font-size: 20px;

    .minicart__empty
        font-weight: 500
        text-align: center
        padding: 20px

    .minicart__list
        margin: 0
        padding: 0

    .minicart__item
        position: relative
        max-height: 130px
        visibility: visible
        opacity: 1
        transition: all .4s ease-in-out

        + .minicart__item
            border-top: solid 1px #eee

    .minicart__link
        display: flex
        align-items: center
        list-style: none
        padding: 10px

        color: #666666

        &:hover
            text-decoration: none

    .minicart__info
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-items: center

    .minicart__name
        font-size: 14px
        flex: 0 0 100%

    .minicart__image
        flex: 0 0 50px
        margin-right: 20px

    .minicart__qty
        font-size: 10px

    .minicart__price
        font-size: 14px
        color: #ff0000

    .minicart__total
        display: flex
        height: 45px
        align-items: center
        justify-content: space-between
        font-size: 14px
        font-weight: 700
        padding: 0 20px

    .minicart__main
        height: calc(100% - 140px)

        overflow-y: auto

    .minicart__finish
        background: #3aad27
        color: #ffffff
        font-size: 16px
        font-weight: 700
        text-transform: uppercase

        height: 50px

        display: flex
        justify-content: center
        align-items: center

        &:hover
            background: #339021

    .minicart__delete
        background white
        border 1px solid #e74949
        border-radius 3px
        font-size 10px
        font-weight 600
        height 25px
        line-height 25px
        margin: 0
        max-height: 0
        opacity: 0
        overflow: hidden
        padding: 0 10px
        transition: all 150ms ease-in-out
        visibility: hidden
        
        svg
            fill #e74949
        
        &:hover
            background #e74949
            color white

            svg
                fill white
        
    .minicart__qty
      &:before
        content ' / '

@media (min-width: 1200px)
  #cart .dropdown:hover
    .cart__dropdown
      opacity 1
      visibility visible
      z-index: 1

  .minicart__list
    border-bottom 1px solid #ededed
    margin-bottom 30px
    max-height 250px
    overflow auto

  .minicart__item
    border-bottom 1px solid #ededed
    padding 25px 0

    &:last-child
      border-bottom 0 none

  .minicart__link
    align-items center
    display flex

  .minicart__image
    align-items center
    display flex
    flex 0 0 auto
    justify-content center
    margin-right 15px
    position relative
    width 70px

    img
      max-height 60px
      max-width 60px

  .minicart__info
    flex 1 1 auto
    position relative

  .minicart__name
    color #696969
    display block
    font-size: 14px
    font-weight: 600
    line-height: 12px
    margin 0 0 5px
    max-width 180px
    text-transform uppercase

  .minicart__details
    align-items baseline
    display flex
    justify-content space-between
    margin-bottom 10px

  .minicart__price
  .minicart__qty
    color #696969
    font-size 14px
    font-weight 500
    line-height 13px
  
  .minicart__total
    display flex
    justify-content center

  .minicart__total-label
    color #696969
    display block
    font-size 14px
    font-weight 500
    line-height 14px
    margin-right 15px
    text-align center

  .minicart__total-price
    color #353535
    display block
    font-size 14px
    font-weight 600
    line-height 16px
    text-align center

  .minicart__finish
    background #fff
    color #00a3d8
    display block
    font-size 19px
    font-weight 700
    line-height 16px
    margin-top 25px
    padding 16px 20px
    text-align center
    width auto

.minicart__header
    display: none